<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Weather App</title>
    <link rel="stylesheet" href="/style/output.css" />
    <style>
      /* Initially hide the weather card */
      .weather {
        display: none;
      }
    </style>
  </head>
  <body class="bg-zinc-800">
    <div
      class="w-full max-w-md mx-auto mt-24 p-4 bg-gradient-to-br from-[#00feba] to-[#5b548a] text-white rounded-2xl flex flex-col items-center"
    >
      <form
        class="search w-10/12 flex items-center m-4"
        action="/weather"
        method="POST"
      >
        <input
          type="text"
          name="cityName"
          placeholder="Enter city Name"
          spellcheck="false"
          class="border-0 outline-none bg-[#ebfffc] text-[#555] py-3 px-5 h-12 rounded-full flex-1 text-md md:w-1/2 lg:w-1/3"
          required
        />

        <button
          type="submit"
          class="ml-4 border-0 outline-none bg-[#ebfffc] rounded-full w-12 h-12 flex items-center justify-center cursor-pointer"
        >
          <img src="/images/search.png" alt="Search" class="w-6 h-6" />
        </button>
      </form>

      <!-- Display error message if there is an error -->
      <% if (error) { %>
      <p class="text-red-500 font-bold text-lg mt-4"><%= error %></p>
      <% } %>

      <!-- Weather card hidden initially -->
      <div class="weather flex flex-col items-center font-bold">
        <% let weatherImageMap = { "Clear": "/images/clear.png", "Clouds":
        "/images/clouds.png", "Drizzle": "/images/drizzle.png", "Mist":
        "/images/mist.png", "Rain": "/images/rain.png" ,"Snow":
        "/images/snow.png", "Smoke": "/images/co2.png",
        "Haze":"/images/fog.png"}; let imageSrc = weatherImageMap[weather] ||
        "/images/empty.png"; %>
        <img
          src="<%= imageSrc %>"
          alt="<%= weather || 'Unknown' %>"
          class="w-[170px] mt-8"
        />

        <h1 class="temp text-7xl font-medium mb-2 mt-4">
          <%= Math.round(temperature) %>Â°C
        </h1>
        <h2 class="city text-5xl font-normal mt-3"><%= city %></h2>
        <p class="description text-3xl mt-2 font-light"><%= description %></p>
        <div class="flex items-center justify-between gap-10 px-5 mt-12">
          <div class="col flex items-center text-left">
            <img
              src="/images/humidity.png"
              class="w-10 mr-2.5"
              alt="Humidity"
            />
            <div>
              <p class="humidity text-3xl -mt-2.5"><%= humidity %></p>
              <p>HUMIDITY</p>
            </div>
          </div>
          <div class="col flex items-center text-left">
            <img src="/images/wind.png" class="w-10 mr-2.5" alt="Wind Speed" />
            <div>
              <p class="text-3xl -mt-2.5"><%= windSpeed %> km/hr</p>
              <p>Wind Speed</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script>
      // Show the weather card when data is available
      window.onload = function () {
        const weatherCard = document.querySelector(".weather");
        if ("<%= city %>" !== "") {
          weatherCard.style.display = "flex";
        }
      };
    </script>
  </body>
</html>
